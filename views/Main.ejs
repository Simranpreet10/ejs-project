<html>
  <head>
    <title>Music Player</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
      }

      header {
        color: #000000;
        padding: 20px;
        text-align: center;
      }

      .centered-div {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        text-align: center;
      }

      .button {
        background-color: #4caf50;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin: 5px;
      }

      .button:hover {
        background-color: #3e8e41;
      }

      .button-group {
        display: flex;
        justify-content: center;
      }
    </style>
    <script type="text/javascript">
      function showAlert(msg) {
        if (msg && msg.length > 0) {
          alert(msg);
        }
      }
    </script>
  </head>
  <body>
    <header>
      <h1>Music Player</h1>
    </header>
    <% if (msg && msg.length > 0) { %>
      <script type="text/javascript">
        showAlert('<%= msg %>');
      </script>
    <% } %>
    <div class="centered-div">
      <h2>Tracks</h2>
      <div class="button-group">
        <a href="/alltracks"><button class="button">List All Tracks</button></a>
        <a href="/addtrack"><button class="button">Add Track</button></a>
      </div>
    
      <h2>Playlists</h2>
      <div class="button-group">
        <a href="/allplaylists"><button class="button">List All Playlists</button></a>
        <a href="/addplaylist"><button class="button">Add Playlist</button></a>
      </div>
    
      <h2>Albums</h2>
      <div class="button-group">
        <a href="/allalbums"><button class="button">List All Albums</button></a>
        <a href="/addalbum"><button class="button">Add Album</button></a>
      </div>
    </div>
    </div>
    <!-- <div id="msgModal" class="modal">
      <div class="modal-content">
        <span class="close" id="closeModal">&times;</span>
        <p id="modalMessage"><%= msg %></p>
      </div> -->
    </div>
  </body>
</html>
